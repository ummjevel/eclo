{
  "name": "eclo",
  "version": "1.0.0",
  "description": "Multilingual On-Device TTS & Voice Cloning Mac Application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:python": "cd src/python && python -m pytest ../../tests/python -v"
  },
  "author": "Eclo Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.eclo.app",
    "productName": "Eclo",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "minimumSystemVersion": "14.0",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "src/python",
        "to": "python"
      }
    ]
  }
}
